<reactiveUi:ReactiveUserControl x:TypeArguments="local:RoomBuilderViewModel" x:Class="PokyPoker.Desktop.Dealer.RoomBuilderView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PokyPoker.Desktop.Dealer"
             xmlns:reactiveUi="http://reactiveui.net"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel Orientation="Vertical">

            <StackPanel Margin="5 2" Orientation="Horizontal">
                <TextBlock Text="BigBlind"/>
                <TextBox x:Name="BigBlindTextBox" />
            </StackPanel>

            <StackPanel Margin="5 2" Orientation="Horizontal">
                <TextBlock Text="SmallBlind"/>
                <TextBox x:Name="SmallBlindTextBox" Width="50" />
            </StackPanel>

            <StackPanel Margin="5 2" Orientation="Horizontal">
                <TextBlock Text="Players: "/>
                <TextBox x:Name="PlayersTextBox" />
            </StackPanel>

            <TextBlock Margin="5 2" x:Name="ErrorTextBlock" />
            <Button Margin="5 2" x:Name="CreateRoomButton" Content="Create"/>

        </StackPanel>
    </Grid>
</reactiveUi:ReactiveUserControl>
