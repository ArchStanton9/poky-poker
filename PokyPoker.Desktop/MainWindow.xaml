<Window x:Class="PokyPoker.Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PokyPoker.Desktop"
        xmlns:controls="clr-namespace:PokyPoker.Desktop.Controls"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Horizontal">
            <controls:CardView Width="40" Height="90" x:Name="Card1" Margin="5"/>
            <controls:CardView Width="40" Height="90" x:Name="Card2" Margin="5"/>
            <controls:CardView Width="40" Height="90" x:Name="Card3" Margin="5"/>
        </StackPanel>
        
    </Grid>
</Window>
